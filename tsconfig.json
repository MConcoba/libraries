{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "lib",
    "noImplicitAny": false,
    "declaration": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "__tests__"]
}
